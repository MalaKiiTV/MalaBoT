# ============================================
# MalaBoT Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED SETTINGS
# ============================================

# Your Discord Bot Token (from Discord Developer Portal)
# Get it from: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Discord User IDs with owner permissions (comma-separated)
# To get your ID: Enable Developer Mode in Discord, right-click your name, Copy ID
OWNER_IDS=123456789012345678,987654321098765432

# ============================================
# BOT CONFIGURATION
# ============================================

# Command prefix for text commands
BOT_PREFIX=/

# Bot display name
BOT_NAME=MalaBoT

# Bot version
BOT_VERSION=1.0.0

# ============================================
# DATABASE SETTINGS
# ============================================

# SQLite database path
DATABASE_URL=sqlite:///data/bot.db

# ============================================
# LOGGING SETTINGS
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Path to log file
LOG_FILE=data/logs/bot.log

# Enable startup verification checks
ENABLE_STARTUP_VERIFICATION=true

# Enable automatic repair on startup issues
ENABLE_AUTO_REPAIR=true

# ============================================
# FEATURE FLAGS
# ============================================

# Enable music commands (requires additional setup)
ENABLE_MUSIC=false

# Enable moderation commands
ENABLE_MODERATION=true

# Enable fun commands (jokes, facts, etc.)
ENABLE_FUN=true

# Enable utility commands
ENABLE_UTILITY=true

# Enable safe mode on crash recovery
ENABLE_SAFE_MODE=true

# ============================================
# MONITORING & HEALTH
# ============================================

# Enable health monitoring system
ENABLE_HEALTH_MONITOR=true

# Enable watchdog system
ENABLE_WATCHDOG=true

# Watchdog check interval (seconds)
WATCHDOG_INTERVAL=60

# Watchdog restart delay (seconds)
WATCHDOG_RESTART_DELAY=5

# ============================================
# OWNER NOTIFICATIONS
# ============================================

# Enable owner alert notifications
OWNER_ALERTS_ENABLED=true

# Enable daily digest reports
OWNER_DAILY_DIGEST_ENABLED=true

# Time to send daily digest (24-hour format: HH:MM)
OWNER_DAILY_DIGEST_TIME=00:00

# Channel ID for status messages (optional)
OWNER_STATUS_CHANNEL_ID=

# ============================================
# EXTERNAL API KEYS (Optional)
# ============================================

# Weather API key (for weather commands)
WEATHER_API_KEY=

# YouTube API key (for music/video features)
YOUTUBE_API_KEY=

# Reddit API key (for Reddit integration)
REDDIT_API_KEY=

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Guild IDs for instant command sync during development (comma-separated)
# Leave empty for production (global sync takes ~1 hour)
# Example: DEBUG_GUILDS=123456789012345678,987654321098765432
DEBUG_GUILDS=

# ============================================
# NOTES
# ============================================
# - Never commit your .env file to version control
# - Keep your DISCORD_TOKEN secret
# - Restart the bot after changing settings
# - Some features require additional setup (see README.md)