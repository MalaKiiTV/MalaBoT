# Discord Configuration
DISCORD_TOKEN=your_bot_token_here
BOT_PREFIX=/
BOT_NAME=MalaBoT
BOT_VERSION=1.0.0
OWNER_IDS=your_owner_id_here
DEVELOPER_IDS=
DEBUG_GUILDS=
DATABASE_URL=sqlite:///data/bot.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=data/logs/bot.log
ENABLE_STARTUP_VERIFICATION=true
ENABLE_AUTO_REPAIR=true

# Feature Flags
ENABLE_MUSIC=false
ENABLE_MODERATION=true
ENABLE_FUN=true
ENABLE_UTILITY=true
ENABLE_SAFE_MODE=true

# Owner Notifications
OWNER_ALERTS_ENABLED=true
OWNER_DAILY_DIGEST_ENABLED=true
OWNER_DAILY_DIGEST_TIME=00:00
OWNER_STATUS_CHANNEL_ID=

# Health & Monitoring
ENABLE_HEALTH_MONITOR=true
ENABLE_WATCHDOG=true
WATCHDOG_INTERVAL=60
WATCHDOG_RESTART_DELAY=5

# API Keys (Optional)
WEATHER_API_KEY=
YOUTUBE_API_KEY=
REDDIT_API_KEY=

# Security Note:
# Do not share or commit this file.
# File permissions must be owner-only (chmod 600 .env on Linux).
# Backups and database files should always remain local to the server.